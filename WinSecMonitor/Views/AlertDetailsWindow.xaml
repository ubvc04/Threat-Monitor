<Window x:Class="WinSecMonitor.Views.AlertDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WinSecMonitor.Views"
        mc:Ignorable="d"
        Title="Alert Details" Height="500" Width="700"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>
        <Style x:Key="ValueTextBlockStyle" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with Alert ID and Timestamp -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Alert Details" FontSize="20" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBlock Text="{Binding AlertID}" FontStyle="Italic" Foreground="#666"/>
            </StackPanel>
            
            <TextBlock Grid.Column="1" Text="{Binding Timestamp}" VerticalAlignment="Top" HorizontalAlignment="Right" Foreground="#666"/>
        </Grid>
        
        <Separator Grid.Row="1" Margin="0,10"/>
        
        <!-- Alert Title and Severity -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="{Binding Title}" FontSize="16" FontWeight="Bold"/>
            
            <Border Grid.Column="1" Background="{Binding SeverityBrush}" CornerRadius="3" Padding="5,2">
                <TextBlock Text="{Binding Severity}" Foreground="White" FontWeight="Bold"/>
            </Border>
        </Grid>
        
        <!-- Description -->
        <StackPanel Grid.Row="3" Margin="0,15,0,0">
            <TextBlock Text="Description" Style="{StaticResource HeaderTextBlockStyle}"/>
            <TextBlock Text="{Binding Description}" Style="{StaticResource ValueTextBlockStyle}"/>
        </StackPanel>
        
        <!-- Source and Type -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Source" Style="{StaticResource HeaderTextBlockStyle}"/>
                <TextBlock Text="{Binding Source}" Style="{StaticResource ValueTextBlockStyle}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1">
                <TextBlock Text="Type" Style="{StaticResource HeaderTextBlockStyle}"/>
                <TextBlock Text="{Binding Type}" Style="{StaticResource ValueTextBlockStyle}"/>
            </StackPanel>
        </Grid>
        
        <!-- Status Information -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0">
                <TextBlock Text="Acknowledgment Status" Style="{StaticResource HeaderTextBlockStyle}"/>
                <TextBlock Text="{Binding AcknowledgmentStatus}" Style="{StaticResource ValueTextBlockStyle}"/>
            </StackPanel>
            
            <StackPanel Grid.Column="1">
                <TextBlock Text="Mitigation Status" Style="{StaticResource HeaderTextBlockStyle}"/>
                <TextBlock Text="{Binding MitigationStatus}" Style="{StaticResource ValueTextBlockStyle}"/>
            </StackPanel>
        </Grid>
        
        <!-- Mitigation Details -->
        <StackPanel Grid.Row="6" Visibility="{Binding MitigationDetailsVisibility}">
            <TextBlock Text="Mitigation Details" Style="{StaticResource HeaderTextBlockStyle}"/>
            <TextBlock Text="{Binding MitigationDetails}" Style="{StaticResource ValueTextBlockStyle}"/>
        </StackPanel>
        
        <!-- Additional Data -->
        <GroupBox Grid.Row="7" Header="Additional Data" Margin="0,10,0,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding AdditionalDataItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding Key}" FontWeight="SemiBold" Margin="0,0,10,0"/>
                                <TextBlock Grid.Column="1" Text="{Binding Value}" TextWrapping="Wrap"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </GroupBox>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Acknowledge" Command="{Binding AcknowledgeCommand}" Width="100" Margin="0,0,10,0" Visibility="{Binding AcknowledgeButtonVisibility}"/>
            <Button Content="Mitigate" Command="{Binding MitigateCommand}" Width="100" Margin="0,0,10,0" Visibility="{Binding MitigateButtonVisibility}"/>
            <Button Content="Close" IsCancel="True" Width="100"/>
        </StackPanel>
    </Grid>
</Window>