<Window x:Class="WinSecMonitor.Views.DebugSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Debug Settings" Height="300" Width="400" WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
                   Text="Debug Settings" FontWeight="Bold" FontSize="16" 
                   Margin="0,0,0,10"/>
        
        <!-- Debug Mode Toggle -->
        <CheckBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                  Content="Enable Debug Mode" 
                  IsChecked="{Binding DebugModeEnabled}" 
                  Margin="0,5"/>
        
        <!-- Max Log File Size -->
        <TextBlock Grid.Row="2" Grid.Column="0" 
                   Text="Max Log File Size (MB):" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"/>
        <TextBox Grid.Row="2" Grid.Column="1" 
                 Text="{Binding MaxLogFileSizeMB}" 
                 VerticalAlignment="Center" 
                 Margin="0,5"/>
        
        <!-- Max Log Files -->
        <TextBlock Grid.Row="3" Grid.Column="0" 
                   Text="Max Log Files:" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"/>
        <TextBox Grid.Row="3" Grid.Column="1" 
                 Text="{Binding MaxLogFiles}" 
                 VerticalAlignment="Center" 
                 Margin="0,5"/>
        
        <!-- Log Buffer Size -->
        <TextBlock Grid.Row="4" Grid.Column="0" 
                   Text="Log Buffer Size:" 
                   VerticalAlignment="Center" 
                   Margin="0,5,10,5"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Text="{Binding LogBufferSize}" 
                 VerticalAlignment="Center" 
                 Margin="0,5"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                    Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="0,10,0,0">
            <Button Content="Open Log Directory" Command="{Binding OpenLogDirectoryCommand}" 
                    Padding="8,3" Margin="0,0,10,0"/>
            <Button Content="Save" Command="{Binding SaveCommand}" 
                    IsDefault="True" Padding="15,3" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" 
                    IsCancel="True" Padding="15,3"/>
        </StackPanel>
    </Grid>
</Window>