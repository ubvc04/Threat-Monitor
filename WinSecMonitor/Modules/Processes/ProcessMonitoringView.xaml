<UserControl x:Class="WinSecMonitor.Modules.Processes.ProcessMonitoringView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WinSecMonitor.Modules.Processes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    
    <UserControl.Resources>
        <Style x:Key="HeaderTextBlockStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        
        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Background" Value="#F9F9F9"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="AlertRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding Severity}" Value="High">
                    <Setter Property="Background" Value="#FFDDDD"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="Medium">
                    <Setter Property="Background" Value="#FFFFDD"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Severity}" Value="Low">
                    <Setter Property="Background" Value="#DDFFDD"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="ProcessRowStyle" TargetType="DataGridRow">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSuspicious}" Value="True">
                    <Setter Property="Background" Value="#FFDDDD"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding IsUnknown}" Value="True">
                    <Setter Property="Background" Value="#FFFFDD"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Header with controls -->
        <Border Style="{StaticResource SectionBorderStyle}" Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Process Monitoring" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Status:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="StatusTextBlock" Text="Stopped" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Unknown:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding UnknownProcessCount}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Suspicious:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding SuspiciousProcessCount}" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <TextBlock Text="Alerts:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="{Binding AlertCount}" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="StartButton" Content="Start" Style="{StaticResource ButtonStyle}" Click="StartButton_Click"/>
                    <Button x:Name="StopButton" Content="Stop" Style="{StaticResource ButtonStyle}" Click="StopButton_Click" IsEnabled="False"/>
                    <Button x:Name="RefreshButton" Content="Refresh" Style="{StaticResource ButtonStyle}" Click="RefreshButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main content with tabs -->
        <TabControl Grid.Row="1" Margin="0,5,0,0">
            <!-- Processes Tab -->
            <TabItem Header="Processes">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search and filter -->
                    <Border Style="{StaticResource SectionBorderStyle}" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Search:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="ProcessSearchTextBox" Width="200" Margin="0,0,10,0" TextChanged="ProcessSearchTextBox_TextChanged"/>
                                <CheckBox x:Name="ShowOnlySuspiciousCheckBox" Content="Show only suspicious" Margin="0,0,10,0" VerticalAlignment="Center" Checked="ProcessFilter_Changed" Unchecked="ProcessFilter_Changed"/>
                                <CheckBox x:Name="ShowOnlyUnknownCheckBox" Content="Show only unknown" Margin="0,0,10,0" VerticalAlignment="Center" Checked="ProcessFilter_Changed" Unchecked="ProcessFilter_Changed"/>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="AddToWhitelistButton" Content="Add to Whitelist" Style="{StaticResource ButtonStyle}" Click="AddToWhitelistButton_Click"/>
                                <Button x:Name="RemoveFromWhitelistButton" Content="Remove from Whitelist" Style="{StaticResource ButtonStyle}" Click="RemoveFromWhitelistButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Process list -->
                    <DataGrid x:Name="ProcessesDataGrid" Grid.Row="1" Margin="0,5,0,0" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              RowStyle="{StaticResource ProcessRowStyle}"
                              SelectionMode="Single" SelectionChanged="ProcessesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Path" Binding="{Binding Path}" Width="200"/>
                            <DataGridTextColumn Header="Parent PID" Binding="{Binding ParentProcessId}" Width="80"/>
                            <DataGridTextColumn Header="CPU %" Binding="{Binding CpuUsage}"/>
                            <DataGridTextColumn Header="Memory" Binding="{Binding MemoryUsageMB}"/>
                            <DataGridTextColumn Header="Started" Binding="{Binding StartTime}" Width="130"/>
                            <DataGridTextColumn Header="Status" Binding="{Binding StatusText}" Width="100"/>
                            <DataGridTextColumn Header="Reason" Binding="{Binding SuspiciousReason}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Alerts Tab -->
            <TabItem Header="Alerts">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Alert controls -->
                    <Border Style="{StaticResource SectionBorderStyle}" Grid.Row="0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Filter:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                <TextBox x:Name="AlertSearchTextBox" Width="200" Margin="0,0,10,0" TextChanged="AlertSearchTextBox_TextChanged"/>
                                <ComboBox x:Name="AlertSeverityComboBox" Width="120" Margin="0,0,10,0" SelectionChanged="AlertFilter_Changed">
                                    <ComboBoxItem Content="All Severities" IsSelected="True"/>
                                    <ComboBoxItem Content="High"/>
                                    <ComboBoxItem Content="Medium"/>
                                    <ComboBoxItem Content="Low"/>
                                </ComboBox>
                                <ComboBox x:Name="AlertTypeComboBox" Width="150" Margin="0,0,10,0" SelectionChanged="AlertFilter_Changed">
                                    <ComboBoxItem Content="All Types" IsSelected="True"/>
                                    <ComboBoxItem Content="Malware Hash Match"/>
                                    <ComboBoxItem Content="Encoded PowerShell"/>
                                    <ComboBoxItem Content="Unusual Behavior"/>
                                    <ComboBoxItem Content="Unknown Process"/>
                                    <ComboBoxItem Content="Suspicious Process"/>
                                </ComboBox>
                            </StackPanel>
                            
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="ClearAlertsButton" Content="Clear Alerts" Style="{StaticResource ButtonStyle}" Click="ClearAlertsButton_Click"/>
                                <Button x:Name="ExportAlertsButton" Content="Export to CSV" Style="{StaticResource ButtonStyle}" Click="ExportAlertsButton_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- Alert list -->
                    <DataGrid x:Name="AlertsDataGrid" Grid.Row="1" Margin="0,5,0,0" 
                              AutoGenerateColumns="False" IsReadOnly="True"
                              RowStyle="{StaticResource AlertRowStyle}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Time" Binding="{Binding Timestamp}" Width="130"/>
                            <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="120"/>
                            <DataGridTextColumn Header="PID" Binding="{Binding ProcessId}" Width="60"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding AlertType}" Width="120"/>
                            <DataGridTextColumn Header="Severity" Binding="{Binding Severity}" Width="80"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
            
            <!-- Settings Tab -->
            <TabItem Header="Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="10">
                        <!-- General Settings -->
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="General Settings" Style="{StaticResource HeaderTextBlockStyle}"/>
                                
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Refresh Interval (seconds):" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="1">
                                        <Slider x:Name="RefreshIntervalSlider" Minimum="1" Maximum="60" Value="5" Width="200" VerticalAlignment="Center"
                                                ValueChanged="RefreshIntervalSlider_ValueChanged"/>
                                        <TextBlock x:Name="RefreshIntervalTextBlock" Text="5" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="Maximum Alerts:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="0,10,0,0">
                                        <Slider x:Name="MaxAlertsSlider" Minimum="50" Maximum="500" Value="100" Width="200" VerticalAlignment="Center"
                                                ValueChanged="MaxAlertsSlider_ValueChanged"/>
                                        <TextBlock x:Name="MaxAlertsTextBlock" Text="100" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    
                                    <TextBlock Text="VirusTotal API Key:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,10,0,0"/>
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="0,10,0,0">
                                        <TextBox x:Name="VirusTotalApiKeyTextBox" Width="300" VerticalAlignment="Center"/>
                                        <Button x:Name="SaveApiKeyButton" Content="Save" Style="{StaticResource ButtonStyle}" Margin="10,0,0,0" Click="SaveApiKeyButton_Click"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                        
                        <!-- Whitelist Management -->
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Process Whitelist" Style="{StaticResource HeaderTextBlockStyle}"/>
                                
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox x:Name="WhitelistProcessTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                                    <Button x:Name="AddWhitelistProcessButton" Content="Add Process" Grid.Column="1" Style="{StaticResource ButtonStyle}" Click="AddWhitelistProcessButton_Click"/>
                                </Grid>
                                
                                <ListBox x:Name="WhitelistProcessesListBox" Height="150" Margin="0,10,0,0" SelectionMode="Single"/>
                                
                                <Button x:Name="RemoveWhitelistProcessButton" Content="Remove Selected" HorizontalAlignment="Right" Margin="0,10,0,0" 
                                        Style="{StaticResource ButtonStyle}" Click="RemoveWhitelistProcessButton_Click"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Malware Hash Management -->
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Malware Hash Management" Style="{StaticResource HeaderTextBlockStyle}"/>
                                
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <TextBox x:Name="MalwareHashTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                                    <Button x:Name="AddMalwareHashButton" Content="Add Hash" Grid.Column="1" Style="{StaticResource ButtonStyle}" Click="AddMalwareHashButton_Click"/>
                                </Grid>
                                
                                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                    <Button x:Name="LoadHashesButton" Content="Load from File" Style="{StaticResource ButtonStyle}" Click="LoadHashesButton_Click"/>
                                    <Button x:Name="SaveHashesButton" Content="Save to File" Style="{StaticResource ButtonStyle}" Click="SaveHashesButton_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>